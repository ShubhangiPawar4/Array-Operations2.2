#include <stdio.h>

int main()
{
    int arr[100], pla, i, n;
    
    printf("Enter number of elements in array\n");
    scanf("%d", &n);
    
    printf("Enter %d elements\n", n);
    
    for ( i = 0 ; i < n ; i++ )
    scanf("%d", &arr[i]);
    
    printf("Enter the position at which you wish to delete element\n");
    scanf("%d", &pla);
    
    if ( pla >= n+1 )    
    printf("No. cannot be deleted \n");
    
    else
    {    
        for ( i = pla - 1 ; i < n - 1 ; i++ ) 
        {
        arr[i] = arr[i+1];        
        }
        printf("New array is\n");
        
        for( i = 0 ; i < n - 1 ; i++ )  
        {      
        printf("%d\n", arr[i]); 
        }       
    }    
    return 0;


}
